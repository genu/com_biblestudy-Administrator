<?xml version="1.0" encoding="utf-8"?>
<server type="storage" supports="*.*">
    <name>FTP</name>
    <description>Connect to third party FTP servers. FTP credentials are required in order to connect successfully.</description>

    <fieldset name="params">
        <fields name="params">
            <field name="hostname" type="text" label="*Hostname*" description="*FTP_Hostname*"/>
            <field name="port" type="text" label="*FTP_PORT*" description="*FTP_PORT*"/>
            <field name="username" type="text" label="*Username*" description="*FTP Username*"/>
            <field name="password" type="password" label="*Password*" description="*Password description*"/>
        </fields>
    </fieldset>
</server>
